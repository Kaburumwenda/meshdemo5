<% include _layouts/header %>

<div class="row products" id="cat-pro">
    
    <% products.forEach(function(p){ %>
            <div class="col-xs-6 col-md-3 col-lg-2 p img-container" >
                <div>
                    <p class="discount"style="font-weight: bold; font-family: 'Oswald';">Discout : Ksh <%= p.discount %></p>
                <a class="pa"  href="/products/<%= p.category %>/<%= p.slug %>">
                    <img class="pimage" id="img-cat" src="/product_images/<%= p.id %>/<%= p.image %>" alt="">
                </a>
                </div>
                
                <h5 style="font-weight: bold; font-family: 'Oswald';"><%= p.title %></h5>
                
                <div class="row">
                    <h4 style="font-family: 'Roboto Slab';">Ksh <%= parseFloat(p.price).toFixed(2) %></h4>
                    <h5 style="font-family: 'Roboto Slab';"><strike class="strike">Ksh <%= parseFloat(p.price_off).toFixed(2) %></Ksh></strike></h5>
                </div>
                <a class="vd" href="/products/<%= p.category %>/<%= p.slug %>"><button class="btn btn-block Details-button">View Details</button></a>
            </div>
        <% }); %>
    
</div>

<script>
    $(document).ready(function()
        {
            $("#cat-pro").css("background-color", "#f2f2f2 ")
        
        });
</script>


<% include _layouts/footer %>