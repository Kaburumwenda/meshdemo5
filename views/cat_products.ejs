<% include _layouts/header %>


    <div class="row products" id="cat-pro">
    
        <% products.forEach(function(p){ %>
               <div class="col-10 col-xs-6  col-md-4 col-lg-3 my-3">
                   <div class="card">


                       <div class="img-container">
                        <p class="dis"style="font-weight: bold; font-family: 'Oswald';">Discout: Ksh<%= p.discount %></p>
                       <a class="pa"  href="/products/<%= p.category %>/<%= p.slug %>">
                            <img class="card-img-top img-responsive"src="/product_images/<%= p.id %>/<%= p.image %>" alt="">
                        </a>
                       </div>


                       <div class="card-footer d-flex justify-content-between">
                        <h6 style="font-weight: bold; font-family: 'Oswald';"><%= p.title %></h6>
                       </div>
                       

                       <div>
                            <h4 style="font-family: 'Roboto Slab';">Ksh <%= parseFloat(p.price).toFixed(2) %></h4>
                            <h5 style="font-family: 'Roboto Slab';"><strike class="strike">Ksh <%= parseFloat(p.price_off).toFixed(2) %></Ksh></strike></h5>
                        </div>


                        <div>
                            <a class="vd" href="/products/<%= p.category %>/<%= p.slug %>"><button class="btn btn-block Details-button">View Details</button></a>
                        </div>
                   </div>
               </div>
            <% }); %>
        
    </div>


<script>
    $(document).ready(function()
        {
            $("#pro").css("background-color", "#f2f2f2 ")
        
        });
</script>


<% include _layouts/footer %>